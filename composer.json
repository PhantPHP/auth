{
    "name": "phant/auth",
    "description": "Manage auth easily",
    "license": "MIT",
    "keywords": ["auth manager", "auth component", "SimpleAuth"],
    "authors": [
        {
            "name": "Lenny ROUANET",
            "email": "lennyrouanet@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "phant/data-structure": "3.*"
    },
    "require-dev": {
        "psr/simple-cache": "^3.0",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "phant/cache": "1.*"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse component --memory-limit=4G",
        "test": "vendor/bin/phpunit test --testdox",
        "code-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit test --coverage-html public/coverage/html"
    },
    "autoload": {
        "psr-4": {
            "Phant\\Auth\\": "component/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    }
}
